# uwsgi vhost definition for graphite web app

##################################
# Rendered by Chef, do not edit! #
##################################

[uwsgi]
plugins-dir = /usr/lib/uwsgi/plugins
plugins = python
uid = _graphite
gid = _graphite
wsgi-file = /usr/share/graphite-web/graphite.wsgi
http-socket = <%= node['oc-graphite']['uwsgi']['listen_ip'] %>:<%= node['oc-graphite']['uwsgi']['listen_port'] %>

# Add crossdomain acces for GET
add-header = Access-Control-Allow-Origin: *
add-header = Access-Control-Allow-Headers: origin, x-requested-with, content-type                                                                 
add-header = Access-Control-Allow-Methods: GET
